@using System.Data
@{
    ViewBag.Title = "Index";
}
@section PageHeader {
    <h2>Login demo</h2>
}
<p>@ViewBag.SomeText</p>

<form method="post" action="@Url.Action("Login", "Home")" >
    <label>Login:
        <input type="text" name="login" />
    </label>
    <label>Password:
        <input type="password" name="password" />
    </label>
    <input type="submit" value="Login" />
</form>

@if (ViewBag.LoggedIn != null && ViewBag.LoggedIn == "true")
{
    <p>logged in</p>
} else {
    <p>not logged in</p>
}
<form method="post" action="@Url.Action("Logout", "Home")" >
    <input type="submit" value="Logout" />
</form>

@Html.ActionLink("Link to another page", "Index", "Page2")